{
    "compilerOptions": {
        "experimentalDecorators": true,
        "sourceMap": true,
        "jsx": "react",
        "module": "commonjs",
        "noImplicitAny": true,
        "outDir": "./build/",
        "preserveConstEnums": true,
        "removeComments": true,
        "target": "es6"
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "typings/*"
    ]
}
